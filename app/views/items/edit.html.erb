<%= render "shared/header"%>

<%= form_with model: @item, local: true do |f| %>

  <div class="content">
    <h1>申請内容を編集する</h1>
    <%= render "shared/error_messages", model: f.object %>
    <p>次のフォームに申請変更内容を入力してください</p>
    <div class="control">
      <label for="maker">メーカー <span class="required">必須</span></label>
      <%= f.text_field :maker, class:"input-default", id:"maker", placeholder:"例) 株式会社ABC", maxlength:"40" %>
    </div>
    <div class="control">
      <label for="name">商品名 <span class="required">必須</span></label>
      <%= f.text_field :name, class:"input-default", id:"itemname", placeholder:"例) ハサミ", maxlength:"40" %>
    </div>
    <div class="control">
      <label for="number">商品番号 <span class="which-required">どちらか必須</span></label>
      <%= f.text_field :number, class:"input-default", id:"number", placeholder:"例) 123123", maxlength:"40" %>
    </div>
    <div class="control">
      <label for="code">商品コード <span class="which-required">どちらか必須</span></label>
      <%= f.text_field :code, class:"input-default", id:"code", placeholder:"例) 123-123", maxlength:"40" %>
    </div>
    <div class="control">
      <label for="quantity">数量 <span class="required">必須</span></label>
      <%= f.text_field :quantity, class:"input-default", id:"quantity", placeholder:"例) 1", maxlength:"40" %>
    </div>
    <div class="control">
      <label for="price">価格 <span class="required">必須</span></label>
      <%= f.text_field :price, class:"input-default", id:"price", placeholder:"例) 10000", maxlength:"40" %>
    </div>
    <div class="control">
      <label for="total_price">合計金額 <span class="required">必須</span></label>
      <%= f.text_field :total_price, class:"input-default", id:"total_price", placeholder:"例) 10000", maxlength:"40" %>
    </div>
    <div class="control">
      <label for="trading_company">商社 <span class="which-required">どちらか必須(優先)</span></label>
      <%= f.text_field :trading_company, class:"input-default", id:"trading_company", placeholder:"例) 株式会社ABC", maxlength:"40" %>
    </div>
    <div class="control">
      <label for="retrieval">検索方法 <span class="which-required">どちらか必須</span></label>
      <%= f.text_field :retrieval, class:"input-default", id:"retrieval", placeholder:"例) Google", maxlength:"40" %>
    </div>
  
    <%# 画像編集機能の実装? %>
    <%# <div class="img-upload">
      <div class="click-upload">
        <p>
          見積書(PDFファイル)をアップロード <span class="no-required">任意</span>
        </p>
        <div class = "pdf-element">
          <%= f.file_field :pdf, name: 'item-pdf', id:"item-pdf" %>
        <%# </div> %>
      <%# </div> %>
    <%# </div>  %>
    <div class="control">
      <%= f.submit "変更内容を更新" ,class:"login-btn" %>
    </div>
  </div>
<% end %>