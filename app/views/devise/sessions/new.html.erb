<%= render "shared/header"%>

<%= form_with model: @user, url: user_session_path, class: 'session-main', local: true do |f| %>
<div class="content">
  <h1>ユーザーログイン</h1>
  <%- flash.each do |name, msg| -%>
    <%= content_tag :div, msg, :id => "flash_#{name}" if msg.is_a?(String) %>
  <%- end -%>  
  <p>次のフォームにユーザー情報を入力してください。</p>
  <div class="control">
    <label for="uid">ユーザーID <span class="required">必須</span></label>
    <%= f.text_field :uid, class:"input-default", id:"userid", placeholder:"例) ponyosky", maxlength:"40" %>
  </div>
  <div class="control">
    <label for="password">パスワード <span class="required">必須</span></label>
    <%= f.password_field :password, class:"input-default", id:"password", placeholder:"6文字以上の半角英数字" %>
  </div>
  <div class="control">
    <%= f.submit "ログイン" ,class:"login-btn" %>
  </div>
<% end %>
      <div class = "guest1">
        <%= link_to 'ゲストログイン(一般ユーザー)', item_guest_sign_in_path, method: :post, class: "btn03" %>
        <%= link_to 'ゲストログイン(課長ユーザー)', item_guest2_sign_in_path, method: :post, class: "btn03" %>
      </div>
      <div class = "guest2">
        <%= link_to 'ゲストログイン(発注グループ)', item_guest3_sign_in_path, method: :post, class: "btn03" %>
        <%= link_to 'ゲストログイン(受入グループ)', item_guest4_sign_in_path, method: :post, class: "btn03" %>
      </div>
<%= button_to "トップページに戻る", root_path, method: :get, class: "top-page-btn2" %>
</div>


