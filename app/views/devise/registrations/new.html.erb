<%= form_with model: @user, url: user_registration_path, class: 'registration-main', local: true do |f| %>

  <div class="content">
    <h1>新規ユーザー登録</h1>
    <%= render "devise/shared/error_messages", resource: resource %>
    <p>次のフォームにユーザー情報を入力してください。</p>
    <div class="control">
      <label for="uid">ユーザーID <span class="required">必須</span></label>
      <%= f.text_field :uid, class:"input-default", id:"userid", placeholder:"例) ponyo_tarou", maxlength:"40" %>
    </div>
    <div class="control">
      <label for="name">お名前 <span class="required">必須</span></label>
      <%= f.text_field :name, class:"input-default", id:"username", placeholder:"例) ぽにょ太郎", maxlength:"40" %>
    </div>
    <div class="control">
      <label for="mymail">メールアドレス <span class="required">必須</span></label>
      <%= f.email_field :email, class:"input-default", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
    </div>
    <div class="control">
      <label for="password">パスワード <span class="required">必須</span></label>
      <%= f.password_field :password, class:"input-default", id:"password", placeholder:"6文字以上の半角英数字" %>
    </div>
    <div class="control">
      <label for="password">パスワード(確認) <span class="required">必須</span></label>
      <%= f.password_field :password_confirmation, class:"input-default", id:"password-confirmation", placeholder:"同じパスワードを入力して下さい" %>
    </div>
    <div class="control">
      <button type="submit">登録する</button>
    </div>
  </div>

<% end %>
<%= render "devise/shared/links" %>
