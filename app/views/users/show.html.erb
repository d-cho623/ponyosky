<%= render "shared/header"%>


<div class="show-main">
  <div class="inner">
    <div class="user__wrapper">
      <h2 class="page-heading">
        <%= "#{current_user.name}さんの情報"%>
      </h2>
      <table class="table">
        <tbody>
          <tr>
            <th class="table__col1">名前</th>
            <td class="table__col2"><%= current_user.name %></td>
          </tr>
          <tr>
            <th class="table__col1">ユーザーID</th>
            <td class="table__col2"><%= current_user.uid %></td>
          </tr>
          <tr>
            <th class="table__col1">メールアドレス</th>
            <td class="table__col2"><%= current_user.email %></td>
          </tr>
          <tr>
            <th class="table__col1">役職</th>
            <td class="table__col2"><%= current_user.occupation.name %></td>
          </tr>
          <tr>
            <th class="table__col1">職場</th>
            <td class="table__col2"><%= current_user.workplace.name %></td>
          </tr>
          <tr>
            <th class="table__col1">組</th>
            <td class="table__col2"><%= current_user.group.name %></td>
          </tr>
        </tbody>
      </table>
        <div class="control">
          <%= link_to "ユーザーを編集", edit_user_path, method: :get, class: "item-edit" %>
          <%= link_to "ユーザーを削除", user_path ,method: :delete, class:"item-destroy" %>
        </div>
    </div>
  </div>
</div>